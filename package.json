{
  "name": "7dtd-map",
  "version": "1.0.0",
  "description": "Map renderer for 7 Days to Die",
  "private": true,
  "scripts": {
    "serve": "./tools/build.bash serve",
    "build": "run-s build:**",
    "build:ts": "./tools/build.bash",
    "build:json:prefab-props": "tsx ./tools/generate-prefab-properties-jsons.ts",
    "build:json:labels": "tsx ./tools/generate-labels-jsons.ts",
    "build:json:block-counts": "tsx ./tools/generate-prefab-block-counts.ts",
    "build:prefab-html": "tsx ./tools/generate-prefab-html.ts",
    "fix": "run-s fix:**",
    "fix:prettier": "prettier --write .",
    "fix:eslint": "eslint --fix .",
    "lint": "run-p lint:**",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint .",
    "lint:tsc:src": "tsc -p src --noEmit",
    "lint:tsc:tools": "tsc -p tools --noEmit",
    "lint:tsc:lib": "tsc -p lib --noEmit",
    "test": "jest --config src/jest.config.ts",
    "ci": "run-p lint test"
  },
  "author": "Keiichiro UI",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@swc/core": "^1.7.6",
    "@swc/jest": "^0.2.36",
    "@tsconfig/node22": "^22.0.0",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.1.0",
    "@types/pngjs": "^6.0.5",
    "@types/three": "^0.167.1",
    "@types/xml2js": "^0.4.14",
    "csv-parse": "^5.5.6",
    "esbuild": "0.23.0",
    "eslint": "^9.8.0",
    "glob": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pngjs": "^7.0.0",
    "prettier": "^3.3.3",
    "three": "~0.167.1",
    "tsx": "^4.16.5",
    "typescript": "~5.5.4",
    "typescript-eslint": "^8.0.0",
    "xml2js": "^0.6.2"
  },
  "engines": {
    "node": "~22"
  }
}
